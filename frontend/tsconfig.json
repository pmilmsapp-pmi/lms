// frontend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "forceConsistentCasingInFileNames": true,  // <--- TAMBAHKAN/UBAH BARIS INI
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".", // <-- penting
    "paths": {
      "@/lib/*": [
        "lib/*"
      ], // <-- alias untuk lib
      "@/components/*": [
        "components/*"
              ],
      "@/*": ["./*"],          // Pastikan alias ini mengarah ke root frontend
      "@/data/*": ["./data/*"] // Tambahkan ini agar lebih spesifik (opsional
    },
    "jsx": "preserve",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "app/courses/[courseId]/backuppage.mdtsx"  ],
  "exclude": [
    "node_modules"
  ]
}
